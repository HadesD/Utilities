# git remote set-url origin git@github-as-hadesd:your-repo.git
# ssh-keygen -t rsa -b 4096 -C "your_email@example.com"
# ssh-keygen -y -f ~/.ssh/id_rsa > ~/.ssh/id_rsa.pub

Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_rsa-hadesd.xxx.pem
  IdentitiesOnly yes

